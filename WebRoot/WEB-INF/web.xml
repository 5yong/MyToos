<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>	
  <filter>
   <filter-name>encodeingChartset</filter-name>
  <filter-class>com.tool.filter.EncodingFilter</filter-class>
  <init-param>
	<param-name>charSet</param-name>
	<param-value>UTF-8</param-value>
</init-param>
  </filter>
  <filter-mapping>
  	<filter-name>encodeingChartset</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
  	<servlet-name>vCode</servlet-name>
  	<servlet-class>com.tool.vcode.servlet.VerifyCodeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>vCode</servlet-name>
  	<url-pattern>/verifyCodeServlet</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>AServlet</servlet-name>
    <servlet-class>com.tool.test.AServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AServlet</servlet-name>
    <url-pattern>/AServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
